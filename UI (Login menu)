import java.awt.event.*;
import javax.swing.*;

import javafx.geometry.Insets;
import javafx.scene.layout.GridPane;

public class UILogin implements ActionListener {
	
	private static JLabel label;
	private static JTextField userIn;
	private static JLabel passLab;
	private static JPasswordField passIn;
	private static JButton sub;
	private static JLabel greatSuccess;
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		JFrame frame = new JFrame();
		frame.setSize(800,500);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setVisible(true);
		
		JPanel panel= new JPanel();
		frame.add(panel);
		panel.setLayout(null);
		
		label = new JLabel("Username:");
		label.setBounds(10,20,80,25);
		panel.add(label);
		
		userIn = new JTextField(40);
		userIn.setBounds(100,20,165,25);
		panel.add(userIn);
		
		passLab = new JLabel("Password:");
		passLab.setBounds(10,50,80,25);
		panel.add(passLab);
		
		passIn = new JPasswordField(40);
		passIn.setBounds(100,50,165,25);
		panel.add(passIn);
		
		sub = new JButton("Submit");
		sub.setBounds(10,80,80,25);
		sub.addActionListener(new UILogin());
		panel.add(sub);
		
		greatSuccess = new JLabel("");
		greatSuccess.setBounds(10,110,300,25);
		panel.add(greatSuccess);
		
//		GridPane centre = new GridPane();
//        centre.setPadding(new Insets(10));
//        centre.setHgap(20);
//        centre.setVgap(10);
        
		
		frame.add(panel);
//		centre.add(panel);
		frame.setVisible(true);
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		String userCred = userIn.getText();
		String passCred = passIn.getText();
		
		if(userCred.equals("Liam") && passCred.equals("password123")) {
			greatSuccess.setText("Access Granted");
			
		}
//		else if(userCred.equals("Alex") && passCred.equals("password123")) {
//			greatSuccess.setText("Access Granted");
//			
//		}
//		else if(userCred.equals("Sotiris") && passCred.equals("password123")) {
//			greatSuccess.setText("Access Granted");
//			
//		}
//		if(userCred.equals("Megyn") && passCred.equals("password123")) {
//			greatSuccess.setText("Access Granted");
//			
//		}
		else {
			
			greatSuccess.setText(userCred + " is invalid");
			
		}
		
	}
	
}
